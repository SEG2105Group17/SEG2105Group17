<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/instructorSignIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/instructorPassword"
        android:layout_marginTop="100dp"
        android:text="Sign In"
        app:layout_constraintTop_toBottomOf="@+id/instructorPassword"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/instructorPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/instructorUsername"
        android:hint="Password"
        app:layout_constraintTop_toBottomOf="@+id/instructorUsername"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/instructorUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />
</androidx.constraintlayout.widget.ConstraintLayout>